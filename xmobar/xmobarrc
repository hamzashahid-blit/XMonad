       , persistent = False
       , iconRoot = "/home/hamza/.xmonad/xpm/" -- default "."
       , hideOnStart = False
       , allDesktops = True
       , overrideRedirect = True

       , commands = [ Run Weather "OPKC" ["-t","<fn=1>\xf0c2</fn> <tempC>Â°C",
